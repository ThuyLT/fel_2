<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_relative"
        android:background="@color/header">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginLeft_linear_word_list"
            android:layout_marginStart="@dimen/marginStart_linear_word_list"
            android:background="@color/header"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_relative"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/label_result"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_textview_lesson"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginLeft_linear_word_list"
            android:layout_marginStart="@dimen/marginStart_linear_word_list"
            android:background="@color/header"
            android:src="@mipmap/ic_ok" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_linear_item_result"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_marginTop_result"
        android:textSize="@dimen/text_size_textview_lesson"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_image_item_result"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/header"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_user_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
