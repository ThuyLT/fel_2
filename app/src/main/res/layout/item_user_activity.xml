<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_text"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:id="@+id/text_activity_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_item_user" />

    <TextView
        android:id="@+id/text_activity_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_item_user"
        android:layout_weight="25"
        android:fontFamily="sans-serif-thin"
        android:gravity="start|bottom"
        android:textSize="@dimen/textsize_item_user"
        android:textStyle="italic" />
</LinearLayout>
