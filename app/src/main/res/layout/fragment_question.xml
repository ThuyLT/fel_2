<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_question_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_textview_lesson"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/layout_margin_End"
        android:textSize="@dimen/textsize_category"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_answers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_fragment_question"></ListView>
</LinearLayout>
