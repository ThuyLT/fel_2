<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_answer"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_word"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_lesson_name"
            android:layout_width="@dimen/layout_width_circleimageview"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize_category"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_lesson_score"
            android:layout_width="@dimen/layout_width_circleimageview"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_horizontal|end"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_category_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_answer"
        android:textColor="@color/text_msg_input"
        android:textSize="@dimen/textsize_category" />
</LinearLayout>