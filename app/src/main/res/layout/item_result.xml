<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_linear_item_result"
    android:orientation="horizontal"
    android:weightSum="100">

    <ImageView
        android:id="@+id/image_answer_status"
        android:layout_width="@dimen/width_image_item_result"
        android:layout_height="@dimen/height_image_item_result"
        android:layout_gravity="center"
        android:layout_weight="10" />

    <TextView
        android:id="@+id/text_origin_word"
        android:layout_width="@dimen/layout_width_lesson"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:gravity="center_vertical"
        android:textSize="@dimen/textsize_category" />

    <TextView
        android:id="@+id/text_user_answer"
        android:layout_width="@dimen/layout_width_lesson"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center_vertical"
        android:textSize="@dimen/textsize_category" />
</LinearLayout>
